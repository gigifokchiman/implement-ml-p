# ML Platform Infrastructure Environment Variables
# Copy this file to .env and customize for your environment

# Registry Configuration
REGISTRY_USERNAME=dev
REGISTRY_PASSWORD=your-secure-password-here

# Database Configuration (for local development)
DB_USERNAME=postgres
DB_PASSWORD=your-db-password-here
DB_NAME=ml_platform

# Redis Configuration
REDIS_PASSWORD=your-redis-password-here

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-minio-password-here

# AWS Configuration (for cloud deployments)
AWS_REGION=us-west-2
TF_STATE_BUCKET=ml-platform-terraform-state

# Optional: Override default cluster name
# KIND_CLUSTER_NAME=ml-platform-local